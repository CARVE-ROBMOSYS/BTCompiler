
-- ===============================================================================
MODULE main
    VAR
        system_inst : system(sys_input);
    VAR
        sys_input : boolean;

    DEFINE
        sys_output := system_inst.sys_output;


-- ===============================================================================
--                               End of module
-- ===============================================================================

-- ===============================================================================
MODULE system(sys_input)
    VAR
        comp_1_inst : comp_spec(sys_input);
        comp_2_inst : comp_spec(comp_1_inst.output);
    DEFINE
        sys_output := comp_2_inst.output;

    LTLSPEC NAME mission_norm_guarantee := ( G sys_input = TRUE ->  G sys_output = TRUE);


-- ===============================================================================
--                               End of module
-- ===============================================================================

-- ===============================================================================
MODULE comp_spec(input)
    VAR
        output : boolean;

    ASSIGN
        output := input;

-- ===============================================================================
--                               End of module
-- ===============================================================================
